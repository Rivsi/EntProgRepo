
@model SuppliersInv


<h3>Add Company Details</h3>
<br />
<form asp-controller="Company" asp-action="Add" method="post"> 
    <label asp-for="CompanyName"></label>
    <input type="text" class="form-control" asp-for="CompanyName" required>
    <br />
    <label asp-for="Address"></label>
    <input type="text" class="form-control" asp-for="Address" required>
    <br />
    <label asp-for="Representative" ></label>
    <input type="text" class="form-control" asp-for="Representative" required >
    <span class="text-danger" asp-validation-for="Representative"></span>
    <br />
     <label asp-for="ContactNo"  ></label>
    <input type="text" class="form-control" asp-for="ContactNo">
    <span class="text-danger" asp-validation-for="ContactNo" required></span>
    <br />
    <input type="hidden" asp-for="DateAdded" class="form-control" value="@DateTime.Now" />
    <br />
     <button type="submit" class="btn btn-success">
        Add record
    </button>
    <a asp-action="Index" asp-controller="Company" class="btn btn-primary">Back</a>
</form>
